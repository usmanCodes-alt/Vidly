@model Vidly.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<form asp-action="Details" method="post">
    <div class="row">
        <input type="hidden" asp-for="@Model.MovieId" />
        <input type="hidden" asp-for="@Model.Movie.CategoryId"/>
        <div class="col-md-4">
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Movie.Name"></label>
                <input class="form-control" readonly type="text" asp-for="@Model.Movie.Name" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Movie.Category.Name"></label>
                <input type="text" class="form-control" readonly asp-for="@Model.Movie.Category.Name" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Movie.Description"></label>
                <textarea class="form-control" asp-for="@Model.Movie.Description" readonly>
                </textarea>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Price"></label>
                <input class="form-control" readonly type="number" asp-for="Movie.Price" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Movie.Image"></label>
                <br />
                <img src="@Model.Movie.Image" alt="Movie Picture" width="100" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Movie.TotalAvailable"></label>
                <input class="form-control" type="number" readonly asp-for="@Model.Movie.TotalAvailable" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="@Model.Count"></label>
                <input class="form-control" type="number" asp-for="@Model.Count" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold">Currently Available</label>
                @*<input class="form-control" asp-for="@Model.IsAvailable" disabled type="checkbox" />*@
                @if (Model.Movie.TotalAvailable > 0)
                {
                    <p>Yes</p>
                }
                else
                {
                    <p>No</p>
                }
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg form-control">Buy</button>
                <a class="btn btn-secondary btn-lg mt-3 form-control" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</form>


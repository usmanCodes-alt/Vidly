@model Vidly.Models.ViewModels.CreateNewMovieViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Movie.Name"></label>
            <input class="form-control" readonly type="text" asp-for="Movie.Name" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Movie.Description"></label>
            <textarea class="form-control" asp-for="Movie.Description" readonly>
            </textarea>
        </div>
        <div class="form-group">
            <label asp-for="Movie.Price"></label>
            <input class="form-control" readonly type="number" asp-for="Movie.Price" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Movie.Image"></label>
            <br />
            <img src="@Model.Movie.Image" alt="Movie Picture" width="100" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Movie.TotalAvailable"></label>
            <input class="form-control" type="number" readonly asp-for="Movie.TotalAvailable" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="Movie.IsAvailable"></label>
            <input class="form-control" asp-for="Movie.IsAvailable" disabled type="checkbox" />
        </div>
    </div>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Movie.Id">Edit</a>
    <br />
    <a asp-action="Index">Back to List</a>
</div>

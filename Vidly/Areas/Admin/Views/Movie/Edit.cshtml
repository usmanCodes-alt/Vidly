@model Vidly.Models.ViewModels.CreateNewMovieViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Movie.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Movie.Name" class="control-label"></label>
                <input asp-for="Movie.Name" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Description"></label>
                <input class="form-control" asp-for="Movie.Description" type="text" />
                <span asp-validation-for="Movie.Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Price"></label>
                <input class="form-control" type="number" asp-for="Movie.Price" />
                <span asp-validation-for="Movie.Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CategoryId"></label>
                <select class="form-control" asp-for="Movie.CategoryId" asp-items="Model.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Image"></label>
                <input class="form-control" asp-for="Movie.Image" type="file" multiple />
            </div>
            <div class="from-control">
                <label asp-for="Movie.TotalAvailable"></label>
                <input class="form-control" type="number" asp-for="Movie.TotalAvailable" />
            </div>
            <div class="form-group">
                <label asp-for="Movie.IsAvailable"></label>
                <input class="form-control" asp-for="Movie.IsAvailable" type="checkbox" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@model IEnumerable<Vidly.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<a class="btn btn-info mt-3 mb-3" asp-action="Create">Create new</a>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>In Stock</th>
                <th>@Html.DisplayNameFor(m => m.TotalAvailable)</th>
                <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.IsAvailable)</td>
                    <td>@Html.DisplayFor(m => item.TotalAvailable)</td>
                    <td>@Html.DisplayFor(m => item.Category.Name)</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No Movies Found</p>
}

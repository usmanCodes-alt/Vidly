@model Vidly.Models.Coupon
@{
    ViewData["Title"] = "AddCoupon";
}

<h1>Add Coupon</h1>

<form method="post" asp-action="AddCoupon">
    <div class="row">
        <div class="col-md-4">
            @{
                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                }

            }
            <div class="text-danger" asp-validation-for="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" type="text" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPercentage"></label>
                <input class="form-control" type="number" asp-for="DiscountPercentage" />
                <span class="text-danger" asp-validation-for="DiscountPercentage"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumPurchaseRequired"></label>
                <input class="form-control" type="number" asp-for="MinimumPurchaseRequired" />
                <span class="text-danger" asp-validation-for="MinimumPurchaseRequired"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive"></label>
                <input class="form-control" type="checkbox" asp-for="IsActive" />
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <button class="btn btn-success" type="submit">Create Coupon</button>
            <br />
            <a class="btn btn-secondary mt-2" asp-action="Index">Back</a>
        </div>
    </div>
</form>
